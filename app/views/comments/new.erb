<form method='post' action='/questions/<%= @question.id %>/comments'>
  <input type="text" name="comment[comment_text]" placeholder="Write your Comment">
  <input type="hidden" name="comment[commentable_id]" value = '<%= @question.id %>'>
  <input type="hidden" name="comment[commentable_type]" value = 'Question'>
  <input type="hidden" name="comment[author_id]" value = '<%= current_user.id%>'>
  <input type="submit" value="Comment done">
</form>